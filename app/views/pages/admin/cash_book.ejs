<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="vi">
<head>
  <%- include ('../../partials/head') %>
  <title>Nhập hàng</title>
  <style>
  .callout {
	  padding: 10px;
	  margin: 10px 0;
	  border: 1px solid #eee;
	  border-left-width: 5px;
	  border-radius: 3px;
  }
  .callout-primary {
	  border-left-color: #007BFF;
  }
  .input-group{
	  margin: 10px 0;
  }
  </style>
  <!-- daterange picker -->
  <link rel="stylesheet" href="/assets/plugins/daterangepicker/daterangepicker.css">
  <!-- Select2 -->
  <link rel="stylesheet" href="/assets/plugins/select2/css/select2.min.css">
  <link rel="stylesheet" href="/assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">
  <%- include ('../../partials/header') %>
  <%- include ('../../partials/menu') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
	<!-- Content Header (Page header) -->
    <section class="content-header">
		<div class="container-fluid">
			<div class="callout callout-primary">
				<div class="row">
					<div class="col-auto mr-auto">
					</div>
					<div class="col-auto">
						<button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#create_new">Tạo mới</button>
					</div>
				</div>
			</div>
		</div><!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->
	
	<!-- Main content -->
    <section class="content">
		<div class="container-fluid">
			<!-- Small boxes (Stat box) -->
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header" style="background-color: black;">
								<h3 class="card-title" style="color: whitesmoke;">Lịch sử thu chi</h3>
								<div class="card-tools">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="far fa-calendar-alt"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control float-right" id="reservation">
                                        <div class="input-group-append">
                                            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>     
								</div>
							</div>
							<!-- /.card-header -->
							<div class="card-body table-responsive p-0" id="show_data">
							</div> 
							<!-- /.card-body -->
							<div class="card-footer clearfix" id="pagination">
							</div>
							<!-- /.card-footer -->
						</div>
						<!-- /.card -->
					</div>
				</div>
		</div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

	<!-- Modal create store -->
	<div class="modal fade" id="create_new" tabindex="-1" role="dialog" aria-labelledby="create_store" data-backdrop="static">
	  <div class="modal-dialog modal-xl" role="document">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title">Tạo hóa đơn mới</h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			  <span aria-hidden="true">&times;</span>
			</button>
		  </div>
		  <div class="modal-body">
            <div class="form-group">
                <div class="input-group mb-3">
				    <div class="input-group-prepend">
                        <span class="input-group-text">Loại</span>
                    </div>
                    <select class="form-control" id="select_type">
                        <option value="income">Thu</option>
						<option value="outcome">Chi</option>
                    </select>
                </div>    
				<div class="input-group mb-3">
					<div class="input-group-prepend">
                        <span class="input-group-text">Bên giao/nhận</span>
                    </div>
                    <select class="form-control" id="select_type_receiver">
                        <option value="supplier">Nhà cung cấp</option>
						<option value="employees">Nhân viên</option>
                    </select>
                </div>
				<div class="input-group mb-3" id="show_supplier">
				    <div class="input-group-prepend">
                        <span class="input-group-text">Tên</span>
                    </div>
                    <select class="form-control select2bs4" id="select_supplier">
                        
                    </select>
                </div>		
				<div class="input-group mb-3" id="show_employees" style="display: none;">
				    <div class="input-group-prepend">
                        <span class="input-group-text">Tên</span>
                    </div>
                    <select class="form-control select2bs4" id="select_employees">
                        
                    </select>
                </div>					
				<div class="input-group mb-3">
					<div class="input-group-prepend">
                        <span class="input-group-text">Số tiền thanh toán</span>
                    </div>
                    <input type="number" step="1000" min="0" onchange="change_debt()" value="0" id="payment" class="form-control">
                </div>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
					  <span class="input-group-text">Ghi chú</span>
					</div>
					<textarea class="form-control" rows="5" id="note"></textarea>
				</div>
            </div>
		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
			<button type="button" class="btn btn-primary" onclick="create_new();" data-dismiss="modal">Tạo</button>
		  </div>
		</div>
	  </div>
	</div>
	<!-- End Modal create store -->
  <input type="hidden" id="_csrf" value="<%=csrfToken %>" />
  <%- include ('../../partials/footer') %>
  <script src="/dist/js/admin/admin_cash_book.js"></script>
  <!-- InputMask -->
  <script src="/assets/plugins/moment/moment.min.js"></script>
  <script src="/assets/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
  <!-- date-range-picker -->
  <script src="/assets/plugins/daterangepicker/daterangepicker.js"></script>
  <!-- Select2 -->
  <script src="/assets/plugins/select2/js/select2.full.min.js"></script>
  <script>
    $(function () {
      //Datemask dd/mm/yyyy
      $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
      //Datemask2 mm/dd/yyyy
      $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
      //Money Euro
      $('[data-mask]').inputmask()
  
      //Date range picker
      $('#reservation').daterangepicker() 
    })
  </script>
</body>
</html>
