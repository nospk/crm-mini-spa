<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="vi">

<head>
  <%- include ('../../partials/head') %>
    <title>Báo cáo cửa hàng</title>
    <style>
      .callout {
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #eee;
        border-left-width: 5px;
        border-radius: 3px;
      }

      .callout-primary {
        border-left-color: #007BFF;
      }

      .input-group {
        margin: 10px 0;
      }
    </style>
</head>

<body class="hold-transition sidebar-mini sidebar-collapse">
  <div class="wrapper">
    <%- include ('../../partials/header') %>
      <%- include ('../../partials/menu') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
          <!-- Content Header (Page header) -->
          <section class="content-header">

          </section>
          <!-- /.content-header -->

          <!-- Main content -->
          <section class="content">
            <div class="container-fluid">
              <!-- Small boxes (Stat box) -->
              <div class="card card-primary">
                <div class="card-header border-0">
                  <h3 class="card-title">Bán Hàng Tháng Này</h3>
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                      <i class="fas fa-minus"></i>
                    </button>
                  </div>
                </div>
                <div class="card-body">
                  <!-- /.d-flex -->

                  <div class="position-relative mb-4">
                    <div class="chartjs-size-monitor">
                      <div class="chartjs-size-monitor-expand">
                        <div class=""></div>
                      </div>
                      <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                      </div>
                    </div>
                    <canvas id="sales-chart" height="250" style="display: block; height: 200px; width: 578px;"
                      width="722" class="chartjs-render-monitor"></canvas>
                  </div>

                  <div class="d-flex flex-row justify-content-end">
                    <span class="mr-2">
                      <i class="fas fa-square text-primary"></i> Doanh Thu: <span id="revenue"></span>
                    </span>

                    <span>
                      <i class="fas fa-square text-gray"></i> Lợi Nhuận: <span id="profit"></span>
                    </span>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-secondary">
                        <div class="inner">
                          <h3 id="old_customer">0</h3>

                          <p>Khách hàng cũ</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-person"></i>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-info">
                        <div class="inner">
                          <h3 id="new_customer">0</h3>

                          <p>Khách hàng mới</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-person-add"></i>
                        </div>
                      </div>
                    </div>


                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-success">
                        <div class="inner">
                          <h3 id="new_customer_payment">0<sup style="font-size: 20px">VND</sup></h3>

                          <p>Số tiền mua</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-bag"></i>
                        </div>
                      </div>
                    </div>

                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-warning">
                        <div class="inner">
                          <h3 id="new_customer_sell_percent">0<sup style="font-size: 20px">%</sup></h3>

                          <p>Chiếm tỉ lệ doanh thu</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-pie-graph"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-12" id="topSell">



                  </div>
                  <div class="col-md-12" id="logServiceMonth">



                  </div>
                </div>
              </div><!-- /.container-fluid -->
              <div class="card card-info">

                <div class="card-header border-0">
                  <h3 class="card-title">Bán Hàng Tháng Trước</h3>
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                      <i class="fas fa-minus"></i>
                    </button>
                  </div>
                </div>
                <div class="card-body">
                  <!-- /.d-flex -->

                  <div class="position-relative mb-4">
                    <div class="chartjs-size-monitor">
                      <div class="chartjs-size-monitor-expand">
                        <div class=""></div>
                      </div>
                      <div class="chartjs-size-monitor-shrink">
                        <div class=""></div>
                      </div>
                    </div>
                    <canvas id="sales-chart-last-month" height="250"
                      style="display: block; height: 200px; width: 578px;" width="722"
                      class="chartjs-render-monitor"></canvas>
                  </div>

                  <div class="d-flex flex-row justify-content-end">
                    <span class="mr-2">
                      <i class="fas fa-square text-primary"></i> Doanh Thu: <span id="revenue_lastmonth"></span>
                    </span>

                    <span>
                      <i class="fas fa-square text-gray"></i> Lợi Nhuận: <span id="profit_lastmonth"></span>
                    </span>
                  </div>
                  <div class="row">
                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-secondary">
                        <div class="inner">
                          <h3 id="old_customer_lastmonth">0</h3>

                          <p>Khách hàng cũ</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-person"></i>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-info">
                        <div class="inner">
                          <h3 id="new_customer_lastmonth">0</h3>

                          <p>Khách hàng mới</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-person-add"></i>
                        </div>
                      </div>
                    </div>


                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-success">
                        <div class="inner">
                          <h3 id="new_customer_payment_lastmonth">0<sup style="font-size: 20px">VND</sup></h3>

                          <p>Số tiền mua</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-bag"></i>
                        </div>
                      </div>
                    </div>

                    <div class="col-lg-3 col-6">
                      <!-- small box -->
                      <div class="small-box bg-warning">
                        <div class="inner">
                          <h3 id="new_customer_sell_percent_lastmonth">0<sup style="font-size: 20px">%</sup></h3>

                          <p>Chiếm tỉ lệ doanh thu</p>
                        </div>
                        <div class="icon">
                          <i class="ion ion-pie-graph"></i>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-12" id="logServiceLastMonth">



                    </div>
                  </div>
                </div>
              </div>
            </div><!-- /.container-fluid -->
          </section>
          <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <input type="hidden" id="_csrf" value="<%=csrfToken %>" />
        <%- include ('../../partials/footer') %>
          <script src="/dist/js/admin_store/admin_store_report.js"></script>
          <script src="/assets/plugins/chart.js/Chart.min.js"></script>
</body>

</html>