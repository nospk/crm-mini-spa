<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="vi">

<head>
	<%- include ('../../partials/head') %>
	<title>Bảng giá</title>
	<style>
		.pointer {
			cursor: pointer;
		}
		input {
		  text-align: right; 
		}
	</style>
	<link rel="stylesheet" href="/assets/plugins/toastr/toastr.min.css">
	<!-- Select2 -->
	<link rel="stylesheet" href="/assets/plugins/select2/css/select2.min.css">
	<link rel="stylesheet" href="/assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
</head>

<body class="hold-transition sidebar-mini sidebar-collapse">
	<div class="wrapper">
		<%- include ('../../partials/header') %>
		<%- include ('../../partials/menu') %>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			<!-- Content Header (Page header) -->
			<section class="content-header">
				<div class="container-fluid">
					<div class="callout callout-primary">
						<div class="row">
							<div class="col-12 mr-auto" style="margin-bottom: 10px">
								<div class="input-group">
								  <div class="input-group-prepend">
									<span class="input-group-text">Danh sách bảng giá</span>
								  </div>
								  <select class="form-control" id="select_price_book">
									<option value="default">Bảng giá chung</option></select>
								  </select>
								  <div class="input-group-append">
									<button type="button" class="btn btn-primary float-right" data-toggle="modal"
									data-target="#create_new">Tạo mới</button>
								  </div>
								</div>
							</div>
							<div class="col-12 mt-auto">
								
							</div>
						</div>
					</div>
				</div><!-- /.container-fluid -->
			</section>
			<!-- /.content-header -->

			<!-- Main content -->
			<section class="content">
				<div class="container-fluid">
					<!-- Small boxes (Stat box) -->
					<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-header" style="background-color: black;">
									<h3 class="card-title" style="color: whitesmoke;">Danh sách sản phẩm</h3>
								</div>
								<!-- /.card-header -->
								<div class="card-body table-responsive p-0" id="show_data">
								</div>
								<!-- /.card-body -->
								<div class="card-footer clearfix" id="pagination">
								</div>
								<!-- /.card-footer -->
							</div>
							<!-- /.card -->
						</div>
					</div>
				</div><!-- /.container-fluid -->
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->

		<!-- Modal new price-->
		<div class="modal" id="new_group" tabindex="-1" role="dialog" aria-labelledby="new_group"
			data-backdrop="static">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<h5 class="modal-title">Tạo Nhóm mới</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						<div class="form-group">
							<div class="input-group mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text">Tên </span>
								</div>
								<input type="text" class="form-control" id="new_name_group" placeholder="Tên Bảng giá"
									aria-label="Name">
							</div>
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
						<button type="button" class="btn btn-primary" onclick="new_name_group();"
							data-dismiss="modal">Tạo</button>
					</div>
				</div>
			</div>
		</div>
		<!-- End Modal new brand -->
		<input type="hidden" id="_csrf" value="<%=csrfToken %>" />
		<%- include ('../../partials/footer') %>
		<script src="/dist/js/admin_manager/admin_price_book.js"></script>
		<-- Toastr-->
		<script src="/assets/plugins/toastr/toastr.min.js"></script>
		<!-- Select2 -->
		<script src="/assets/plugins/select2/js/select2.full.min.js"></script>
</body>

</html>