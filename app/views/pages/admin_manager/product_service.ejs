<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="vi">
<head>
  <%- include ('../../partials/head') %>
  <title>Sản phẩm và dịch vụ</title>
  <style>
  .callout {
	  padding: 10px;
	  margin: 10px 0;
	  border: 1px solid #eee;
	  border-left-width: 5px;
	  border-radius: 3px;
  }
  .callout-primary {
	  border-left-color: #007BFF;
  }
  .input-group{
	  margin: 10px 0;
  }
  </style>
</head>
<body class="hold-transition sidebar-mini sidebar-collapse">
<div class="wrapper">
  <%- include ('../../partials/header') %>
  <%- include ('../../partials/menu') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
	<!-- Content Header (Page header) -->
    <section class="content-header">
		<div class="container-fluid">
			<div class="callout callout-primary">
				<div class="row">
					<div class="col-auto mr-auto">
					</div>
					<div class="col-auto">
						<button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#create_new">Tạo mới</button>
					</div>
				</div>
			</div>
		</div><!-- /.container-fluid -->
    </section>
    <!-- /.content-header -->
	
	<!-- Main content -->
    <section class="content">
		<div class="container-fluid">
			<!-- Small boxes (Stat box) -->
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header" style="background-color: black;">
								<h3 class="card-title" style="color: whitesmoke;">Danh sách sản phẩm</h3>
								<div class="card-tools">
									<div class="input-group input-group-sm" style="width: 150px;">
										<input type="text" name="table_search" class="form-control float-right" id="search_word" placeholder="Tìm">
	
										<div class="input-group-append">
											<button type="submit" class="btn btn-default" onclick="get_data()"><i class="fas fa-search"></i></button>
										</div>
									</div>
								</div>
							</div>
							<!-- /.card-header -->
							<div class="card-body table-responsive p-0" id="show_data">
							</div> 
							<!-- /.card-body -->
							<div class="card-footer clearfix" id="pagination">
							</div>
							<!-- /.card-footer -->
						</div>
						<!-- /.card -->
					</div>
				</div>
		</div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

	<!-- Modal create store -->
	<div class="modal fade" id="create_new" tabindex="-1" role="dialog" aria-labelledby="create_store" data-backdrop="static">
	  <div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title">Tạo sản phẩm - dịch vụ </h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			  <span aria-hidden="true">&times;</span>
			</button>
		  </div>
		  <div class="modal-body">
			<div class="input-group">
				<div class="input-group-prepend">
					<div class="input-group-text" id="btnGroupAddon1">Tên</div>
				</div>
				<input type="text" class="form-control" id="name" placeholder="Nhập tên" aria-label="Name" aria-describedby="btnGroupAddon1">
			</div>
			<div class="input-group mb-3">
                <div class="input-group-prepend">
                  <div class="input-group-text" for="type_product_service">Loại</div>
                </div>
                <select class="custom-select" id="type_product_service">
                  <option value="product">Sản phẩm</option>
                  <option value="service">Dịch vụ</option>
                </select>
			</div>
			<div class="input-group">
				<div class="input-group-prepend">
					<div class="input-group-text" id="btnGroupAddon2">Mã số</div>
				</div>
				<input type="text" class="form-control" id="number_code" placeholder="Nhập mã tắt" aria-label="Number code" aria-describedby="btnGroupAddon2">
			</div>
			<div class="input-group">
				<div class="input-group-prepend">
					<div class="input-group-text" id="btnGroupAddon4">Giá vốn</div>
				</div>
				<input type="currency" class="form-control" id="cost_price" placeholder="Nhập giá"  aria-label="Price" aria-describedby="btnGroupAddon4">
            </div>
            <div class="input-group">
				<div class="input-group-prepend">
					<div class="input-group-text" id="btnGroupAddon3">Giá bán</div>
				</div>
				<input type="currency" class="form-control" id="price" placeholder="Nhập giá" aria-label="Price" aria-describedby="btnGroupAddon3">
            </div>
            <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">Mô tả</span>
                </div>
                <textarea class="form-control" id="description" rows="5" aria-label="Description"></textarea>
              </div>
		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
			<button type="button" class="btn btn-primary" onclick="create_new();" data-dismiss="modal">Tạo</button>
		  </div>
		</div>
	  </div>
	</div>
	<!-- End Modal create store -->
	<!-- Modal create store -->
	<div class="modal fade" id="edit_data" tabindex="-1" role="dialog" aria-labelledby="create_store" data-backdrop="static">
	  <div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
		  <div class="modal-header">
			<h5 class="modal-title">Chỉnh sửa thông tin sản phẩm - dịch vụ </h5>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close">
			  <span aria-hidden="true">&times;</span>
			</button>
		  </div>
		  <div class="modal-body">
			<ul class="nav nav-tabs" role="tablist">
				<li class="nav-item">
				  <a class="nav-link active" id="edit-information" data-toggle="pill" href="#edit-information-tab" role="tab" aria-controls="edit-information-tab" aria-selected="true">Thông tin</a>
				</li>
				<li class="nav-item">
				  <a class="nav-link" id="edit-stock" data-toggle="pill" href="#edit-stock-tab" role="tab" aria-controls="edit-stock-tab" aria-selected="false">Hàng tồn</a>
				</li>
			</ul>
			<div class="tab-content">
				<div class="tab-pane fade active show" id="edit-information-tab" role="tabpanel" aria-labelledby="edit-information">
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text" id="btnGroupAddon1">Tên</div>
						</div>
						<input type="text" class="form-control" id="edit_name" placeholder="Nhập tên" aria-label="Name" aria-describedby="btnGroupAddon1">
					</div>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
						<div class="input-group-text" for="type_product_service">Loại</div>
						</div>
						<select class="custom-select" disabled id="edit_type_product_service">
						<option value="product">Sản phẩm</option>
						<option value="service">Dịch vụ</option>
						</select>
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text" id="btnGroupAddon2">Mã số</div>
						</div>
						<input type="text" class="form-control" id="edit_number_code" placeholder="Nhập mã tắt" aria-label="Number code" aria-describedby="btnGroupAddon2">
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text" id="btnGroupAddon4">Giá vốn</div>
						</div>
						<input type="currency" class="form-control" disabled id="edit_cost_price" aria-label="Price" aria-describedby="btnGroupAddon4">
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
							<div class="input-group-text" id="btnGroupAddon3">Giá</div>
						</div>
						<input type="currency" class="form-control" id="edit_price" aria-label="Price" aria-describedby="btnGroupAddon3">
					</div>
					<div class="input-group">
						<div class="input-group-prepend">
						<span class="input-group-text">Mô tả</span>
						</div>
						<textarea class="form-control" id="edit_description" rows="5" aria-label="Description"></textarea>
					</div>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
						<div class="input-group-text" for="is_Active">Trạng thái</div>
						</div>
						<select class="custom-select" id="isSale">
						<option value="true">Đang kinh doanh</option>
						<option value="false">Ngừng kinh doanh</option>
						</select>
					</div>
				</div>
				<div class="tab-pane fade" id="edit-stock-tab" role="tabpanel" aria-labelledby="edit-stock">
					
				</div>
			</div>
			<input type="hidden" id="edit_id" value="" />
		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
			<button type="button" class="btn btn-primary" onclick="update_data();" data-dismiss="modal">Sửa</button>
		  </div>
		</div>
	  </div>
	</div>
	<!-- End Modal create store -->
  <input type="hidden" id="_csrf" value="<%=csrfToken %>" />
  <%- include ('../../partials/footer') %>
  <script src="/dist/js/admin_manager/admin_product_service.js"></script>
</body>
</html>
